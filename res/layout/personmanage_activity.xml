<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#339999"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:src="@drawable/nav_but_back2_default"/>
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:text="租客管理"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:background="#FAFAFA"
	        android:orientation="vertical"
	        android:layout_weight="4">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:textSize="20dp"
	            android:textColor="#339999"
	            android:text="租客信息"/>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:gravity="center_vertical"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="房间号:"/>
	            <TextView
	                android:id="@+id/DoorId" 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="20016"/>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:gravity="center_vertical"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="姓名:"/>
	            <TextView
	                android:id="@+id/UserName"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="袁志强"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:background="#FFFFFF">
	            <TextView
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="年龄:"/>
	            <TextView
	                android:id="@+id/Age"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="22"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="性别:"/>
	            <TextView
	                android:id="@+id/Sex" 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="男"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="出生日期:"/>
	            <TextView
	                android:id="@+id/Birthday"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="1994-03-21"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="电话:"/>
	            <TextView
	                android:id="@+id/Tel"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="17780602344"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="开门权限:"/>
	            <LinearLayout 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:orientation="vertical">
		            <Button
		                android:id="@+id/openpermissions"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_marginLeft="45dip"
		                android:layout_marginRight="45dip"
		                android:layout_marginTop="1dip"
		                android:layout_marginBottom="1dip"
		                android:background="#339999"
		                android:gravity="center"
		                android:textSize="15dp"
		                android:textColor="#FFFFFF"
		                android:text="权限管理"/>
	            </LinearLayout>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="入住时间:"/>
	            <TextView
	                android:id="@+id/inTime"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="17780602344"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:gravity="center_vertical"
	            android:orientation="horizontal"
	            android:layout_marginTop="2dip"
	            android:background="#FFFFFF">
	            <TextView 
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="1"
	                android:gravity="center_vertical|right"
	                android:textSize="18dp"
	                android:textColor="#339999"
	                android:text="到期时间:"/>
	            <TextView
	                android:id="@+id/enTime"
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:layout_weight="2"
	                android:gravity="center"
	                android:textSize="18dp"
	                android:textColor="#000"
	                android:text="17780602344"/>
	        </LinearLayout>
	        
	    </LinearLayout>
    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2"
	        android:orientation="vertical">
			    <LinearLayout
			        android:id="@+id/liner1"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:orientation="horizontal">
			
			        <Button
			            android:id="@+id/myhouse"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="15dp"
			            android:background="#339999"
			            android:text="门卡续期" />
			
			        <Button
			            android:id="@+id/mytenant"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="15dp"
			            android:background="#66CCCC"
			            android:text="门卡注销"/>
			        
			    </LinearLayout>
			    <LinearLayout 
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:layout_weight="1"
			        android:orientation="horizontal">
			    	<Button
			    	    android:id="@+id/cardreport"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_margin="15dp"
			            android:layout_weight="1"
			            android:background="#CC99CC"
			            android:text="门卡挂失" />
			
			        <Button
			            android:id="@+id/registerCard"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1"
			            android:layout_margin="15dp"
			            android:background="#666699"
			            android:text="门卡补办" />
			    </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
