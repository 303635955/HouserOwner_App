<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#DEDDDE"
    android:orientation="vertical"
    android:weightSum="6" >
	<LinearLayout
        android:id="@+id/houseinfo_other_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#05c0af"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="0.5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员信息登记"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="重点关注："
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/Spinner_Focus_attention"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="未刷卡警告间隔："
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/warning"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="生育动态："
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/Spinner_birth"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="避孕动态："
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/Spinner_contraception"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="计生证类型："
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/Spinner_plan"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="计生证号："
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/Spinner_plan_number"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="0-1周岁子女："
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/Spinner_children"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="残疾类型："
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/Spinner_disability"
                android:layout_width="90dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/regist_info_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#05c0af"
        android:text="登记"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>